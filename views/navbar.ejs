<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="stylesheets/navbar.css">

<div class="nav-bar">
    <div class="left">
        <div class="hovers">
            <a href="/home_page">
                <h2>View Books</h2>
            </a>
        </div>
        <div class="hovers">
            <a href="/new_book">
                <h2>New Books</h2>
            </a>
        </div>
    </div>
    <div class="right">
        <% if (!currentUser) { %>
            <div class="hovers">
                <a href="/register">
                    <h2>Register</h2>
                </a>
            </div>

            <div class="hovers">
                <a href="/login">
                    <h2>Sign In</h2>
                </a>
            </div>
        <% } else { %>
            <div class="hovers">
                <a href="/logout">
                    <h2>Log Out</h2>
                </a>
            </div>
        <% } %> 
    </div>
</div>

<div class="flash">
    <% if (success && success.length) { %>
        <h1>
            <%= success %>
        </h1>
    <% } else if (error && error.length) { %>
        <h1>
            <%= error %>
        </h1>
    <% } %>
</div>